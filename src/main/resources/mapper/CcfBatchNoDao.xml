<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gbd.dao.CcfBatchNoDao">

    <resultMap type="com.gbd.entity.CcfBatchNo" id="CcfBatchNoMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="batchNo" column="batch_no" jdbcType="VARCHAR"/>
        <result property="desc" column="desc" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="CcfBatchNoMap">
        select
          id, batch_no, desc
        from ccf_batch_no
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="CcfBatchNoMap">
        select
          id, batch_no,    `desc`
        from ccf_batch_no
        <where>
            <if test="CcfBatchNo.id != null">
                and id = #{CcfBatchNo.id}
            </if>
            <if test="CcfBatchNo.batchNo != null and CcfBatchNo.batchNo != ''">
                and batch_no = #{CcfBatchNo.batchNo}
            </if>
            <if test="CcfBatchNo.desc != null and CcfBatchNo.desc != ''">
                and desc = #{CcfBatchNo.desc}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from ccf_batch_no
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="batchNo != null and batchNo != ''">
                and batch_no = #{batchNo}
            </if>
            <if test="desc != null and desc != ''">
                and desc = #{desc}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into ccf_batch_no(batch_no, desc)
        values (#{batchNo}, #{desc})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into ccf_batch_no(batch_no, desc)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.batchNo}, #{entity.desc})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into ccf_batch_no(batch_no, desc)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.batchNo}, #{entity.desc})
        </foreach>
        on duplicate key update
        batch_no = values(batch_no),
        desc = values(desc)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update ccf_batch_no
        <set>
            <if test="batchNo != null and batchNo != ''">
                batch_no = #{batchNo},
            </if>
            <if test="desc != null and desc != ''">
                desc = #{desc},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from ccf_batch_no where id = #{id}
    </delete>

</mapper>

